/* ========================== QMenu ========================== */
QMenu{
    color: rgb(39, 154, 255);
    background-color: rgb(24, 24, 24);
    text-align: left;
    border-color: rgb(24, 24, 24);
    border: 0px;
    font: 9pt;
}

QMenu::item{
    padding: 5px 5px 5px 5px;
    width: 140px;
 }


QMenu::item:selected {
    background-color: rgb(39, 154, 255);
    color: rgb(24, 24, 24);
 }

 QMenu::indicator {
      width: 60px;
      height: 13px;
  }
